#messaging-view.ba-messaging.hidden-xs.hidden-sm(style="display: none")
  header.ba-header
    .ba-header--wrapper
      .ba-header--title Babelot
      .ba-header--username {{currentConversation}}
      .ba-header--user-menu 
        .dropdown
          button.dropdown-toggle(type='button', data-toggle='dropdown')
            | {{user.nickname}} 
            span.caret
          ul.dropdown-menu
            li((click)="logout()") Logout
      .ba-header--requests
        .dropdown
          button.dropdown-toggle(type='button', data-toggle='dropdown')
            svg(fill="#ffffff" height="24" viewBox="0 0 24 24" width="24")
                path(d="M0 0h24v24H0z" fill="none")
                path(d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z")
            p( (click)="showRequestList()" ){{ contactRequests.length }}
            request-panel([requests]="currentUser.contactRequests")

  
  .ba-messaging--content
    .ba-sidebar-left.ba-bg-white
      list-panel([contacts]='user.contacts')
    .ba-center-panel.ba-bg-white
      chat-panel
    .ba-sidebar-right
      sim-preview
      sim-search-panel

//- MESSAGE FOR USERS ON SMALL SCRENES
.visible-xs.visible-sm
  .device-not-supported
    p This website is only available on desktop devices
