.ba-chatlist-item((click)="openChatWith(conversation)")
  .profile-image-wrapper
    img(src='http://www.talkaboutwork.sg/upload/noimage/avatar.png' width="50" height="50")

  .info
    .info--name {{ conversation.nickname }}
    .info--preview none
  .close-icon
    .icon
      button((click)="removeContact(conversation, $event)")
        svg(fill='#7E7B7B', height='24', viewBox='0 0 24 24', width='24')
          path(d='M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z')
          path(d='M0 0h24v24H0z', fill='none')
